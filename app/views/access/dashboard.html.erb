<% if !flash[:notice].blank?%>
  <div class="notice">
  <%=flash[:notice]%>
  </div>
  <% end %>
  
 <div class= "top-banner">
 <h1>Subtle Convos</h1>
 </div>
  
  <section class="left-pane">
    <div class = user-info>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, style:"width: 50px; display: block" %>
        <% end %>
      <p><%= current_user.full_name.upcase() %></p>
      
      <div class="relationship-count">
      <p><%= current_user.followers.count %> Followers </p>
      <p><%= current_user.following.count %> Following </p>
      
      </div>
    </div>
    <div class="nav-links">
    <ul>
  <li> <%= image_tag("home.svg", style:"width: 20px;") %> <%= link_to "Home", access_dashboard_path %>
  </li>
  <li><%= image_tag("user-profile.svg", style:"width: 20px;") %> <%= link_to "Profile", user_path(current_user) %></li>
  <li><%= image_tag("logout.svg", style:"width: 20px;") %><%= link_to "Logout", access_logout_path %></li>
    </ul>
    
    </div>
  
   </section>
   
   <section class="page-content">
   <div class="middle-pane">
    <h3 class= "content-title ">All conversations</h3>
    <div class="form-wrapper">
        <h3 class="text-uppercase">Say Something</h3>
        <%= render 'form' %>
    </div>
    
  
    <div class="form-wrapper">
      <% @all_feelings.each do |feeling| %>
      <img/>
      <h4> <%= feeling.user.name %></h4>
      <p>  <%= feeling.body %></p>
      <%end%>
    
    </div>
    
   </div>
  

<div class="third-pane">
<h3 class= "content-title">Who to follow</h3>

  <div class="users-list">
    <% @all_users.each do |user| %>
      <p>
        <%= user.name %>
      </p>
      <p>Follows <%= user.followers.first %></p>
    <% end %>
  </div>
</div>
</section>