<% if !flash[:notice].blank?%>
  <div class="notice">
  <%=flash[:notice]%>
  </div>
  <% end %>
  
 <div class="top-banner">
      <h1>Subtle Convos</h1>
 </div>
  
  <section class="left-pane">
    <div class = "user-info d-flex pl-1 py-1">
    
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, class: 'user-image' %>
          <% else %>
           <%= image_tag("user-profile.svg", style:"width: 20px;") %>
        <% end %>
      <p class="current-user"><%= current_user.full_name.upcase() %></p>
    </div>
      <div class="relationship-count d-flex">
      <p><%= current_user.followers.count %>  Followers </p>
      <p><%= current_user.following.count %> Following </p>
    </div>
    <div class="nav">
         <div class="nav-link active">
            <%= image_tag("home.svg", style:"width: 20px; " ) %> 
            <%= link_to "Home", access_dashboard_path %>
        </div>
        <div class="nav-link"><%= image_tag("user-profile.svg", style:"width: 20px;") %> <%= link_to "Profile", user_path(current_user) %></div>
       <div class="nav-link"> <%= image_tag("logout.svg", style:"width: 20px;") %><%= link_to "Logout", access_logout_path %></div>
        
          
    </div>
  
   </section>
   
   <section class="page-content">
   <div class="middle-pane">
    <h3 class= "content-title ">All conversations</h3>
    <div class="form-wrapper">
        <h3 class="text-uppercase">Say Something</h3>
        <%= render 'form' %>
    </div>
    
  
    <div class="form-wrapper">
      <% @all_feelings.each do |feeling| %>
      <div class="user-posts d-flex my-4">
          <%= image_tag feeling.user.avatar, class: 'user-image' %>
        <div class="ml-3">
            <h3><%=link_to feeling.user.full_name,  user_path(feeling.user.id), class: 'user-name' %></h3>
    
            <p><%= feeling.body %></p>
        </div>
      </div>
      <%end%>
    
    </div>
    
   </div>
  

<div class="third-pane ">
<h3 class= "content-title">Who to follow</h3>

  <div class="users-list px-4 my-2">
    <% @all_users.each do |user| %>
    <div class="d-flex my-3">
      <% if who_not_to_follow.exclude?(user.id) %>
      <%if user.avatar.nil? %>
       <%= image_tag("home.svg", class: 'user-image' ) %> 
       <% else %>
       <%= image_tag user.avatar, class: 'user-image' %>
       <% end %>
       <div class="ml-3 ">
        <h3>
          <%= link_to user.full_name, user_path(user.id), class: 'user-name' %>
        </h3>
        <p>Followed by (Coming soon)</p>
        </div>
        <% end %>
  </div>
    <% end %>
  </div>
</div>

</section>

