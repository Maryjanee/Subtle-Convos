
<div class="container">
    <section class="left-pane">
        <div class = "user-info d-flex pl-1 py-1">
            <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, style:"width: 50px; display: block" %>
            <% else %>
                <%= image_tag("home.svg", class: 'user-image' ) %> 
            <% end %>
            <p class="current-user"><%= current_user.full_name.upcase() %></p>
        </div>
        <div class="relationship-count d-flex">
            <p><%= current_user.followers.count %>  Followers </p>
            <p><%= current_user.following.count %> Following </p>
        </div>
        <nav>
            <div class="nav-link">
                <%= image_tag("home.svg", style:"width: 20px; " ) %> 
                <%= link_to "Home", access_dashboard_path %>
            </div>
            <div class="nav-link active "><%= image_tag("user-profile.svg", style:"width: 20px;") %> <%= link_to "Profile", user_path(current_user) %></div>
            <div class="nav-link"> <%= image_tag("logout.svg", style:"width: 20px;") %><%= link_to "Logout", access_logout_path %></div> 
        </nav>
      
      </section>
        <div class= "top-banner">
          <h1>Subtle Convos</h1>
        </div>
    <section class="page-content">
      <div class="middle-pane">
        <div>
            <% if @user.cover_image.nil? %>
                <%= image_tag("cover-3.jpg", class: 'cover-image' ) %>   
            <% else %>
                <%= image_tag @user.cover_image, class: 'cover-image'%>
            <% end %>
          </div>
          <h4 class="my-3">All feelings </h4>
          <div class="form-wrapper">
          <h5>Conversation from from <%= @user.full_name.upcase()%> </h5>
              <%= render 'form' %>
        
      </div>
        <div class="form-wrapper mt-5 ">
            <% @all_user_feelings.each do |content| %>
              <div class="user-posts d-flex mt-4">
                  <%= image_tag content.user.avatar, class: 'user-image' %>
                <div class="ml-3">
                  <h3><%=link_to content.user.full_name,  user_path(content.user.id), class: 'user-name' %></h3>
                    <p><%= content.body %></p>
                </div>
              </div>
           <%end%>
      </div>
        
  </div>
      

      <div class="third-pane ">
       <div class="d-flex single-user">
        <% if who_not_to_follow.exclude?(@user.id) %>
           
              <%= button_to relationships_path(followed_id: @user.id), class: "mt-4 mr-4" do  %>
                  <%= image_tag("plus.svg", class: 'rounded-circle' ) %> 
              <% end %>
        
        <% end %>

      <div class="single-user-info">
        <div>
      <%= image_tag @user.avatar, class: 'single-user-img' %>
           </div>
      <p class="mt-4"><%=@user.full_name.upcase()%></p>
      <p class="ml-3">@<%=@user.name%></p>
      </div>
</div>
      <div class="d-flex user-stats">
          <p class="text-center"><%=@user.feelings.count %><br/>Convos </p>
          <p class="text-center"><%=@user.following.count %><br/>Following </p>
          <p class="text-center"><%=@user.followers.count %><br/> Followers</p>
      </div>


        <% if @user.following.blank? %>
          <p>No Followers</p>
        <%else %>
          <% @followers.each do |user| %>
          <div class="d-flex mt-3 followed">
             <div class="d-flex">
                  <%= image_tag user.avatar, class: 'user-image' %>
                  <div class="user-details">
                  <p><%=link_to user.full_name,  user_path(user.id), class: 'user-name' %></p>
                  <p>@<%=link_to user.name,  user_path(user.id), class: 'user-name' %></p>
                  </div>
              </div>
              <% if who_not_to_follow.exclude?(user.id) %>
                  <%= button_to relationships_path(followed_id: @user.id), class: "mt-4 mr-4" do  %>
                  <%= image_tag("plus.svg", class: 'rounded-circle' ) %> 
              <% end %>
        
              <% end %>
              </div>
          <% end %>
        <%end%>

      </div>

    </div>

</section>


